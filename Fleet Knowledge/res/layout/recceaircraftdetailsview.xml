                            android:id="@+id/TextView01"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Crew"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/tactical_green"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/recceAircraftDetailsViewCrewLBL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Officer: "
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout03"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/TextView03"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Performance: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/tactical_green"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/recceAircraftDetailsViewPerformanceLBL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Officer: "
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout04"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/TextView04"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Propulsion: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/tactical_green"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/recceAircraftDetailsViewPropulsionLBL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Officer: "
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout02"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/TextView02"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Armament"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/tactical_green"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/recceAircraftDetailsViewArmamentLBL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Officer: "
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout07"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/TextView08"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Sensors: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/tactical_green"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/recceAircraftDetailsViewSensorsLBL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Officer: "
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout08"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/TextView10"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Current"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/tactical_green"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/recceAircraftDetailsViewCurrentLBL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Officer: "
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/LinearLayout09"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/TextView12"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Mission"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/tactical_green"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/recceAircraftDetailsViewMissionLBL"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Officer: "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/recceAircraftDetailsViewImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/button_pencil" />

        </LinearLayout>

    </ViewFlipper>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/recceAircraftDetailViewMoreInfoLBL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="More Info"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/tactical_green" />

    </LinearLayout>

